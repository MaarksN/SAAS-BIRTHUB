datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// --- CORE ---
model Organization {
  id        String   @id @default(cuid())
  name      String
  plan      String   @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  leads     Lead[]
  deals     Deal[]
  integrations IntegrationConfig[]
  products  Product[]
  workflows Workflow[]

  @@map("organizations")
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  role           String       @default("MEMBER")
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  deals          Deal[]
  activities     Activity[]
  socialPosts    SocialPost[]
  tickets        SupportTicket[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("users")
}

// --- PROSPECTOR (LDR) ---
model Lead {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  firstName      String?
  lastName       String?
  email          String?
  companyName    String?
  status         String   @default("NEW")
  score          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("leads")
}

// --- HUB (CRM/AE) ---
model Deal {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  ownerId        String
  owner          User     @relation(fields: [ownerId], references: [id])
  title          String
  value          Float    @default(0)
  stage          String   @default("DISCOVERY")
  pipelineId     String?
  pipeline       Pipeline? @relation(fields: [pipelineId], references: [id])
  activities     Activity[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("deals")
}

model Pipeline {
  id             String   @id @default(cuid())
  name           String
  stages         Json     // Array of Stage objects
  deals          Deal[]
  createdAt      DateTime @default(now())

  @@map("pipelines")
}

model Product {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  name           String
  price          Float
  currency       String   @default("BRL")
  createdAt      DateTime @default(now())

  @@map("products")
}

// --- ACTIVITIES & VOICE ---
model Activity {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id])
  type        String
  content     String?  @db.Text
  recording   CallRecording?
  createdAt   DateTime @default(now())

  @@map("activities")
}

model CallRecording {
  id          String   @id @default(cuid())
  activityId  String   @unique
  activity    Activity @relation(fields: [activityId], references: [id])
  url         String
  transcription String? @db.Text
  summary     String?  @db.Text
  sentiment   String?
  duration    Int?
  createdAt   DateTime @default(now())

  @@map("call_recordings")
}

// --- SOCIAL ---
model SocialPost {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  content     String   @db.Text
  platform    String   // LINKEDIN, TWITTER
  status      String   // DRAFT, SCHEDULED, PUBLISHED
  scheduledAt DateTime?
  createdAt   DateTime @default(now())

  @@map("social_posts")
}

// --- AUTOMATION ---
model Workflow {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  name           String
  isActive       Boolean  @default(true)
  triggerType    String
  steps          Json     // Array of Step objects
  createdAt      DateTime @default(now())

  @@map("workflows")
}

// --- SUPPORT ---
model SupportTicket {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  subject     String
  status      String   @default("OPEN")
  priority    String   @default("NORMAL")
  createdAt   DateTime @default(now())

  @@map("support_tickets")
}

// --- INTEGRATIONS ---
model IntegrationConfig {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  provider       String   // HUBSPOT, SALESFORCE, SLACK
  apiKey         String?
  webhookUrl     String?
  isEnabled      Boolean  @default(false)
  createdAt      DateTime @default(now())

  @@map("integration_configs")
}

// --- LOGS ---
model EnrichmentHistory {
  id          String   @id @default(cuid())
  target      String
  source      String
  status      String
  payload     Json
  createdAt   DateTime @default(now())

  @@map("enrichment_history")
}

model LeadScoreLog {
  id          String   @id @default(cuid())
  leadId      String
  score       Int
  factors     Json
  createdAt   DateTime @default(now())

  @@map("lead_score_logs")
}
