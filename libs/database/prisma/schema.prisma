datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  roles     Role[]

  @@map("organizations")
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  roleId         String?
  role           Role?        @relation(fields: [roleId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("users")
}

model Role {
  id             String       @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  users          User[]
  permissions    Permission[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  code        String   @unique
  description String?
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("permissions")
}

// LDR - Market Intelligence Models

model CompanyProfile {
  id             String   @id @default(cuid())
  cnpj           String   @unique
  name           String
  segment        String?
  cnae           String?
  employeesCount Int?
  foundedAt      DateTime?
  isActive       Boolean  @default(true)
  enrichmentLogs EnrichmentLog[]
  reliability    DataReliabilityScore?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("company_profiles")
}

model EnrichmentLog {
  id              String         @id @default(cuid())
  companyId       String
  company         CompanyProfile @relation(fields: [companyId], references: [id])
  source          String
  dataField       String
  previousValue   String?
  newValue        String?
  confidenceScore Float
  performedAt     DateTime       @default(now())

  @@map("enrichment_logs")
}

model DataReliabilityScore {
  id        String         @id @default(cuid())
  companyId String         @unique
  company   CompanyProfile @relation(fields: [companyId], references: [id])
  score     Float          // 0 to 100
  factors   Json           // Detailed breakdown of factors
  updatedAt DateTime       @updatedAt

  @@map("data_reliability_scores")
}
