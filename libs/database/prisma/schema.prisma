datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  plan      String   @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  leads     Lead[]
  deals     Deal[]

  @@map("organizations")
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  role           String       @default("MEMBER")
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  deals          Deal[]
  activities     Activity[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("users")
}

model Lead {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Basic Info
  firstName      String?
  lastName       String?
  email          String?
  phone          String?
  linkedinUrl    String?
  role           String?

  // Company Info
  companyName    String?
  companyDomain  String?
  industry       String?
  employees      Int?

  // Intelligence
  status         String   @default("NEW") // NEW, ENRICHED, CONTACTED, QUALIFIED, DISQUALIFIED
  score          Int      @default(0)
  techStack      Json?    // Array of strings
  tags           Json?    // Array of strings

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("leads")
}

model Deal {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  ownerId        String
  owner          User     @relation(fields: [ownerId], references: [id])

  title          String
  value          Float    @default(0)
  currency       String   @default("BRL")
  stage          String   @default("DISCOVERY") // DISCOVERY, DEMO, NEGOTIATION, CLOSED_WON, CLOSED_LOST
  probability    Int      @default(20)
  expectedCloseDate DateTime?

  activities     Activity[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("deals")
}

model Activity {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id])

  type        String   // CALL, EMAIL, MEETING, NOTE, TASK
  subject     String?
  content     String?  @db.Text
  status      String   @default("DONE") // DONE, PENDING

  createdAt   DateTime @default(now())

  @@map("activities")
}

model EnrichmentHistory {
  id          String   @id @default(cuid())
  target      String   // Email or Domain or CNPJ
  source      String
  status      String   // SUCCESS, FAILED
  cost        Float    @default(0)
  payload     Json
  createdAt   DateTime @default(now())

  @@map("enrichment_history")
}

model LeadScoreLog {
  id          String   @id @default(cuid())
  leadId      String
  score       Int
  factors     Json
  createdAt   DateTime @default(now())

  @@map("lead_score_logs")
}
