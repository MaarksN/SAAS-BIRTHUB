datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  roles     Role[]

  @@map("organizations")
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
  @@index([email])
  roleId         String?
  role           Role?        @relation(fields: [roleId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deals          Deal[]

  @@map("users")
}

model Role {
  id             String       @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  users          User[]
  permissions    Permission[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  code        String   @unique
  description String?
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("permissions")
}

// LDR - Market Intelligence Models

model CompanyProfile {
  id             String   @id @default(cuid())
  cnpj           String   @unique
  name           String
  segment        String?
  cnae           String?
  employeesCount Int?
  foundedAt      DateTime?
  isActive       Boolean  @default(true)
  enrichmentLogs EnrichmentLog[]
  reliability    DataReliabilityScore?
  buyingCommittees BuyingCommittee[]
  deals          Deal[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("company_profiles")
}

model EnrichmentLog {
  id              String         @id @default(cuid())
  companyId       String
  company         CompanyProfile @relation(fields: [companyId], references: [id])
  source          String
  dataField       String
  previousValue   String?
  newValue        String?
  confidenceScore Float
  performedAt     DateTime       @default(now())

  @@map("enrichment_logs")
}

model DataReliabilityScore {
  id        String         @id @default(cuid())
  companyId String         @unique
  company   CompanyProfile @relation(fields: [companyId], references: [id])
  score     Float          // 0 to 100
  factors   Json           // Detailed breakdown of factors
  updatedAt DateTime       @updatedAt

  @@map("data_reliability_scores")
}

// BDR - Outbound Hunter Models

model BuyingCommittee {
  id             String   @id @default(cuid())
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  contacts       Contact[]
  updatedAt      DateTime @updatedAt

  @@map("buying_committees")
}

model Contact {
  id                String          @id @default(cuid())
  name              String
  email             String?
  phone             String?
  role              String?
  seniority         String?         // C-Level, VP, Director, Manager
  buyingCommitteeId String?
  buyingCommittee   BuyingCommittee? @relation(fields: [buyingCommitteeId], references: [id])

  @@index([email])
  @@index([buyingCommitteeId])
  linkedInUrl       String?
  isDecisionMaker   Boolean         @default(false)
  influenceLevel    String?         // High, Medium, Low
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@map("contacts")
}

model OutboundSequence {
  id          String   @id @default(cuid())
  name        String
  steps       Json
  targetAudience Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("outbound_sequences")
}

// SDR - Inbound Response Models

model Lead {
  id             String   @id @default(cuid())
  email          String
  name           String?
  phone          String?
  companyName    String?
  score          Float    @default(0)
  status         String   @default("NEW") // NEW, QUALIFIED, DISQUALIFIED
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  leadScores     LeadScore[]

  @@map("leads")
}

model LeadScore {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id])
  score     Float
  reason    String
  createdAt DateTime @default(now())

  @@map("lead_scores")
}

model Cadence {
  id        String   @id @default(cuid())
  name      String
  steps     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cadences")
}

// AE - Closer Models

model Deal {
  id             String   @id @default(cuid())
  title          String
  value          Float
  stage          String   // Discovery, Demo, Negotiation, Closed Won, Closed Lost
  probability    Float    // 0-100
  expectedCloseDate DateTime?
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  ownerId        String
  owner          User     @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
  @@index([stage])
  @@index([companyId])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  quotes         Quote[]
  meetings       Meeting[]

  @@map("deals")
}

model Quote {
  id        String   @id @default(cuid())
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id])
  amount    Float
  status    String   // DRAFT, SENT, ACCEPTED, REJECTED
  version   Int      @default(1)
  content   Json     // Line items, terms
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("quotes")
}

model Meeting {
  id        String   @id @default(cuid())
  dealId    String?
  deal      Deal?    @relation(fields: [dealId], references: [id])
  title     String
  startTime DateTime
  endTime   DateTime
  summary   String?
  recordingUrl String?
  analysis  Json?    // AI analysis result
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("meetings")
}
