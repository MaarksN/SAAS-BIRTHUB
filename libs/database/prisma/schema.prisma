datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client"
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  roles     Role[]

  @@map("organizations")
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  roleId         String?
  role           Role?        @relation(fields: [roleId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deals          Deal[]
  tickets        Ticket[]
  territories    Territory[]
  tasks          ImplementationTask[]

  @@map("users")
}

model Role {
  id             String       @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  users          User[]
  permissions    Permission[]
  commissionRules CommissionRule[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  code        String   @unique
  description String?
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("permissions")
}

// LDR - Market Intelligence Models

model CompanyProfile {
  id             String   @id @default(cuid())
  cnpj           String   @unique
  name           String
  segment        String?
  cnae           String?
  employeesCount Int?
  foundedAt      DateTime?
  isActive       Boolean  @default(true)
  enrichmentLogs EnrichmentLog[]
  reliability    DataReliabilityScore?
  buyingCommittees BuyingCommittee[]
  deals          Deal[]
  healthScores   CustomerHealth[]
  successPlans   SuccessPlan[]
  qbrs           QBR[]
  tickets        Ticket[]
  onboardingProjects OnboardingProject[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("company_profiles")
}

model EnrichmentLog {
  id              String         @id @default(cuid())
  companyId       String
  company         CompanyProfile @relation(fields: [companyId], references: [id])
  source          String
  dataField       String
  previousValue   String?
  newValue        String?
  confidenceScore Float
  performedAt     DateTime       @default(now())

  @@map("enrichment_logs")
}

model DataReliabilityScore {
  id        String         @id @default(cuid())
  companyId String         @unique
  company   CompanyProfile @relation(fields: [companyId], references: [id])
  score     Float          // 0 to 100
  factors   Json           // Detailed breakdown of factors
  updatedAt DateTime       @updatedAt

  @@map("data_reliability_scores")
}

// BDR - Outbound Hunter Models

model BuyingCommittee {
  id             String   @id @default(cuid())
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  contacts       Contact[]
  updatedAt      DateTime @updatedAt

  @@map("buying_committees")
}

model Contact {
  id                String          @id @default(cuid())
  name              String
  email             String?
  phone             String?
  role              String?
  seniority         String?         // C-Level, VP, Director, Manager
  buyingCommitteeId String?
  buyingCommittee   BuyingCommittee? @relation(fields: [buyingCommitteeId], references: [id])
  linkedInUrl       String?
  isDecisionMaker   Boolean         @default(false)
  influenceLevel    String?         // High, Medium, Low
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@map("contacts")
}

model OutboundSequence {
  id          String   @id @default(cuid())
  name        String
  steps       Json
  targetAudience Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("outbound_sequences")
}

// SDR - Inbound Response Models

model Lead {
  id             String   @id @default(cuid())
  email          String
  name           String?
  phone          String?
  companyName    String?
  score          Float    @default(0)
  status         String   @default("NEW") // NEW, QUALIFIED, DISQUALIFIED
  marketingCampaignId String?
  marketingCampaign MarketingCampaign? @relation(fields: [marketingCampaignId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  leadScores     LeadScore[]

  @@map("leads")
}

model LeadScore {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id])
  score     Float
  reason    String
  createdAt DateTime @default(now())

  @@map("lead_scores")
}

model Cadence {
  id        String   @id @default(cuid())
  name      String
  steps     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cadences")
}

// AE - Closer Models

model Deal {
  id             String   @id @default(cuid())
  title          String
  value          Float
  stage          String   // Discovery, Demo, Negotiation, Closed Won, Closed Lost
  probability    Float    // 0-100
  expectedCloseDate DateTime?
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  ownerId        String
  owner          User     @relation(fields: [ownerId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  quotes         Quote[]
  meetings       Meeting[]

  @@map("deals")
}

model Quote {
  id        String   @id @default(cuid())
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id])
  amount    Float
  status    String   // DRAFT, SENT, ACCEPTED, REJECTED
  version   Int      @default(1)
  content   Json     // Line items, terms
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("quotes")
}

model Meeting {
  id        String   @id @default(cuid())
  dealId    String?
  deal      Deal?    @relation(fields: [dealId], references: [id])
  title     String
  startTime DateTime
  endTime   DateTime
  summary   String?
  recordingUrl String?
  analysis  Json?    // AI analysis result
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("meetings")
}

// Customer Success - Retention Models

model CustomerHealth {
  id             String   @id @default(cuid())
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  score          Float    // 0-100
  riskLevel      String   // LOW, MEDIUM, HIGH
  churnProbability Float
  factors        Json
  updatedAt      DateTime @updatedAt

  @@map("customer_health_scores")
}

model SuccessPlan {
  id             String   @id @default(cuid())
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  objectives     Json
  status         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("success_plans")
}

model QBR {
  id             String   @id @default(cuid())
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  date           DateTime
  summary        String
  sentiment      String
  createdAt      DateTime @default(now())

  @@map("qbrs")
}

// Support - Technical Models

model Ticket {
  id             String   @id @default(cuid())
  title          String
  description    String
  status         String   // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  priority       String   // LOW, MEDIUM, HIGH, CRITICAL
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  requesterId    String?
  assigneeId     String?
  assignee       User?    @relation(fields: [assigneeId], references: [id])
  tags           String[]
  sentiment      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("tickets")
}

model KnowledgeBaseArticle {
  id             String   @id @default(cuid())
  title          String
  content        String
  tags           String[]
  views          Int      @default(0)
  helpfulCount   Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("kb_articles")
}

// Sales Ops - RevOps Models

model CommissionRule {
  id             String   @id @default(cuid())
  name           String
  roleId         String
  role           Role     @relation(fields: [roleId], references: [id])
  formula        String   // e.g., "deal_value * 0.10"
  conditions     Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("commission_rules")
}

model Territory {
  id             String   @id @default(cuid())
  name           String
  criteria       Json     // e.g., { "region": "South", "size": "Enterprise" }
  managerId      String?
  manager        User?    @relation(fields: [managerId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("territories")
}

model OpsAudit {
  id             String   @id @default(cuid())
  entityType     String
  entityId       String
  action         String
  performedBy    String
  details        Json
  createdAt      DateTime @default(now())

  @@map("ops_audits")
}

// Growth Marketing Models

model MarketingCampaign {
  id             String   @id @default(cuid())
  name           String
  channel        String   // LinkedIn, Google, Email, etc.
  budget         Float
  spend          Float
  status         String   // ACTIVE, PAUSED, COMPLETED
  startDate      DateTime
  endDate        DateTime?
  leads          Lead[]
  attribution    Attribution[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("marketing_campaigns")
}

model Attribution {
  id             String   @id @default(cuid())
  campaignId     String
  campaign       MarketingCampaign @relation(fields: [campaignId], references: [id])
  leadId         String?
  dealId         String?
  touchpointType String   // FIRST_TOUCH, LAST_TOUCH, MULTI_TOUCH
  weight         Float
  value          Float
  createdAt      DateTime @default(now())

  @@map("attributions")
}

model Experiment {
  id             String   @id @default(cuid())
  name           String
  type           String   // A/B, MULTIVARIATE
  status         String   // RUNNING, CONCLUDED
  variants       Json
  winnerVariant  String?
  confidence     Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("experiments")
}

// Onboarding - Implementation Models

model OnboardingProject {
  id             String   @id @default(cuid())
  companyId      String
  company        CompanyProfile @relation(fields: [companyId], references: [id])
  name           String
  status         String   // PLANNED, IN_PROGRESS, DELAYED, COMPLETED
  startDate      DateTime
  targetGoLive   DateTime
  actualGoLive   DateTime?
  tasks          ImplementationTask[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("onboarding_projects")
}

model ImplementationTask {
  id             String            @id @default(cuid())
  projectId      String
  project        OnboardingProject @relation(fields: [projectId], references: [id])
  title          String
  status         String            // TODO, IN_PROGRESS, DONE
  assignedToId   String?
  assignee       User?             @relation(fields: [assignedToId], references: [id])
  dueDate        DateTime?
  completedAt    DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@map("implementation_tasks")
}
